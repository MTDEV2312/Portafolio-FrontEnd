---
export interface Props {
  title: string;
  description: string;
  imageSrc: string;
  githubLink?: string;
  liveDemoLink?: string;
  tech_section?: string[];
}

const { title, description, imageSrc, githubLink, liveDemoLink, tech_section } = Astro.props;
---

<article class="w-full flex flex-col md:flex-row bg-card/95 backdrop-blur-sm rounded-2xl shadow-xl border-2 border-primary/20 overflow-hidden hover:scale-[1.02] hover:border-primary/40 transition-all duration-300 focus-within:ring-2 focus-within:ring-primary focus-within:ring-offset-2 focus-within:ring-offset-card">
  <!-- Imagen del proyecto -->
  <div class="md:w-2/5 w-full flex items-center justify-center bg-muted/50 p-4">
    <img 
      class="w-full h-48 md:h-56 object-cover rounded-xl border-2 border-border shadow-lg hover:border-primary transition-colors duration-300" 
      src={imageSrc} 
      alt={`Captura de pantalla del proyecto ${title}`}
      loading="lazy"
    />
  </div>
  
  <!-- Contenido del proyecto -->
  <div class="flex-1 flex flex-col justify-between p-6 gap-4">
    <!-- Header -->
    <div>
      <h3 class="font-bold text-2xl mb-3 text-card-foreground">
        {title}
      </h3>
      <p class="text-muted-foreground text-base leading-relaxed mb-4">
        {description}
      </p>
      
      <!-- Tecnologías (si se proporcionan) -->
      {tech_section && tech_section.length > 0 && (
        <div class="mb-4">
          <h4 class="text-sm font-semibold text-card-foreground mb-3">Tecnologías utilizadas:</h4>
          <div class="flex flex-wrap gap-2">
            {tech_section.map((tech) => (
              <span class="bg-primary text-primary-foreground px-3 py-1.5 rounded-full text-sm font-medium border border-primary/20 shadow-sm hover:bg-primary/90 transition-colors duration-200">
                {tech}
              </span>
            ))}
          </div>
        </div>
      )}
    </div>
    
    <!-- Botones de acción -->
    <div class="flex gap-3 mt-auto">
      {githubLink && (
        <a
          href={githubLink}
          class="inline-flex items-center gap-2 bg-primary text-primary-foreground px-5 py-2.5 rounded-lg hover:bg-primary/90 hover:scale-105 transition-all duration-300 font-semibold shadow-md border border-primary/20 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-card"
          target="_blank"
          rel="noopener noreferrer"
          aria-label={`Ver código fuente de ${title} en GitHub (se abre en nueva pestaña)`}
        >
          <!-- Icono GitHub SVG -->
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          Código
        </a>
      )}
      
      {liveDemoLink && (
        <a
          href={liveDemoLink}
          class="inline-flex items-center gap-2 bg-tertiary text-tertiary-foreground px-5 py-2.5 rounded-lg hover:bg-tertiary/90 hover:scale-105 transition-all duration-300 font-semibold shadow-md border border-tertiary/20 focus:outline-none focus:ring-2 focus:ring-tertiary focus:ring-offset-2 focus:ring-offset-card"
          target="_blank"
          rel="noopener noreferrer"
          aria-label={`Ver demo en vivo de ${title} (se abre en nueva pestaña)`}
        >
          <!-- Icono External Link SVG -->
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
          Demo
        </a>
      )}
    </div>
  </div>
</article>