---
import Logo from '../components/Logo.astro';
const currentYear = new Date().getFullYear();
---

<footer class="w-full bg-primary/90 backdrop-blur-sm border-t-2 border-accent/40 py-8 relative z-40">
  <div class="max-w-6xl mx-auto px-6">
    <!-- Contenido principal del footer -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      
      <!-- Información personal -->
      <div class="text-center md:text-left">
        <div class="flex items-center justify-center md:justify-start gap-3 mb-4">
          <div class="p-2 bg-accent/10 rounded-xl backdrop-blur-sm border border-accent/30">
            <Logo size="sm" />
          </div>
          <span class="text-primary-foreground font-bold text-xl">Mathías Terán</span>
        </div>
        <p class="text-accent text-sm leading-relaxed">
          Desarrollador FullStack apasionado por crear soluciones web innovadoras y eficientes.
        </p>
      </div>

      <!-- Enlaces rápidos -->
      <div class="text-center">
        <h3 class="text-primary-foreground font-semibold text-lg mb-4">Enlaces Rápidos</h3>
        <nav class="flex flex-col space-y-2">
          <a href="#home" class="text-accent hover:text-primary-foreground transition-colors duration-300 text-sm">
            Inicio
          </a>
          <a href="#about" class="text-accent hover:text-primary-foreground transition-colors duration-300 text-sm">
            Sobre Mí
          </a>
          <a href="#projects" class="text-accent hover:text-primary-foreground transition-colors duration-300 text-sm">
            Proyectos
          </a>
          <a href="#contact" class="text-accent hover:text-primary-foreground transition-colors duration-300 text-sm">
            Contacto
          </a>
        </nav>
      </div>

      <!-- Redes sociales -->
      <div class="text-center md:text-right">
        <h3 class="text-primary-foreground font-semibold text-lg mb-4">Sígueme</h3>
        <div class="flex gap-4 justify-center md:justify-end mb-4">
          <a 
            href="https://github.com/MTDEV2312"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-quaternary text-quaternary-foreground hover:bg-quaternary/80 hover:scale-110 p-3 rounded-lg transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-quaternary focus:ring-offset-2 focus:ring-offset-primary"
            aria-label="Ver perfil de GitHub (se abre en nueva pestaña)"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
